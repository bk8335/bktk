<% provide(:title, @post.title) %>
<h1><%= @post.title %></h1>
<h3><%= link_to @post.category.name, posts_path(category: @post.category.name)%></h3>
<p><%= @post.created_at.strftime("%d %B %Y") %>
<% if @post.created_at.to_date != @post.updated_at.to_date %>
	 (Updated: <%= @post.updated_at.strftime("%d %B %Y") %>)
<% end %>
<%= image_tag @post.image_url.to_s, class: "img-responsive blog-image" %>
<p><%= @post.content.html_safe %></p>
<p><strong><%= @post.author %></strong></p>

<a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-via="BKandTK" data-show-count="false">Tweet</a>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

<% if session[:admin] then %>
 <%= link_to edit_post_path(@post), class: "btn btn-default" do %>
   <span class="glyphicon glyphicon-align-left" aria-hidden="true">
   </span> Edit
 <% end %>
 <%= link_to @post, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-default" do %>
   <span class="glyphicon glyphicon-trash" aria-hidden="true">
   </span> Delete
 <% end %> 
<% end %>

