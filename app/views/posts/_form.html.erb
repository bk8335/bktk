<%= form_for @post, html: { multipart: true } do |f| %>

	<%= render "shared/error_messages" %>

	<%= f.label :category%><br>
	<%= f.collection_select(:category_id, Category.all, :id, :name,
			{prompt: 'Choose a category'}) %><br><br>

	<%= f.label :title%><br>
	<%= f.text_field :title, placeholder: 'Type the post title here' %></br>

	<%= f.label :content %><br>
	<%= f.text_area :content, size: "60x12", placeholder: 'Type the post text here'%><br>

	<%= f.label :image%><br>
	<%= f.file_field :image%><br>

	<%= f.label :author%><br>
	<%= f.select :author, options_for_select(Post::AUTHOR.values.each {|author| [author]}) %><br><br>

	<%= f.submit %>

<% end %>